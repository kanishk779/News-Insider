<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="News Settings">

    <ListPreference
        android:defaultValue="in"
        android:entries="@array/settings_order_by_labels"
        android:entryValues="@array/settings_order_by_values"
        android:key="countries"
        android:title="Country" />
    <ListPreference
        android:defaultValue="general"
        android:entries="@array/settings_categories_labels"
        android:entryValues="@array/settings_categories_values"
        android:key="categories"
        android:title="Category" />

    <EditTextPreference
        android:defaultValue="2018-07-08"
        android:key="fromDate"
        android:inputType="date"
        android:selectAllOnFocus="true"
        android:title="From Date" />
    <EditTextPreference
        android:defaultValue="20"
        android:inputType="numberDecimal"
        android:key="PageSize"
        android:selectAllOnFocus="true"
        android:title="Headlines Per Page" />

</PreferenceScreen>